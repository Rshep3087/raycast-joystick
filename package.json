{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "joystick",
  "title": "Joystick",
  "description": "Subsonic API server client",
  "icon": "extension-icon.png",
  "author": "rshep3087",
  "license": "MIT",
  "commands": [
    {
      "name": "get-now-playing",
      "title": "Get Now Playing",
      "description": "Get all currently playing songs from your Subsonic server",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "title": "Server URL",
      "description": "Your Subsonic server URL (e.g., http://localhost:4533)",
      "type": "textfield",
      "required": true,
      "placeholder": "http://localhost:4533"
    },
    {
      "name": "username",
      "title": "Username",
      "description": "Your Subsonic username",
      "type": "textfield",
      "required": true
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Your Subsonic password",
      "type": "password",
      "required": true
    },
    {
      "name": "salt",
      "title": "Salt (Optional)",
      "description": "Custom salt for password hashing (auto-generated if not provided)",
      "type": "textfield",
      "required": false,
      "placeholder": "random-salt-string"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.2",
    "@raycast/utils": "^1.17.0",
    "@types/md5": "^2.3.5",
    "md5": "^2.3.0",
    "subsonicjs": "^0.6.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
